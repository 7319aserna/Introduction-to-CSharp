<Window x:Class="Assessable_CSharp_Tool_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessable___CSharp_Tool_Application"
        mc:Ignorable="d"
    Title="Platform Jump Tool" Height="500" Width="625" ResizeMode="NoResize">
    <Grid Name="jd" Background="White">
        <StackPanel Background="AliceBlue" Margin="0,62,259,348" Orientation="Horizontal">
            <Button Content="Game" HorizontalAlignment="Center" Name="Game_Button"  Width="87" Click="Game_Button_Click"/>
            <Button Content="Player" HorizontalAlignment="Center" Name="Player_Button"  Width="87"/>
            <Button Content="Audio" HorizontalAlignment="Center" Name="Audio_Button"  Width="87"/>
            <Button Content="Video" HorizontalAlignment="Center" Name="Video_Button"  Width="87"/>
        </StackPanel>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="338" Margin="360,124,0,0" VerticalAlignment="Top" Width="259"/>

        <Grid HorizontalAlignment="Left" Height="338" Margin="0,124,0,0" VerticalAlignment="Top" Width="360">
            <!-- Level Settings: Rising Obstacle-->
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="80" Stroke="Black" VerticalAlignment="Top" Width="360"/>
            <CheckBox Content="Level Settings: Rising Obstacle?" FontSize="18" FontFamily="Times New Roman" HorizontalAlignment="Center" Margin="54,0,54,258" VerticalAlignment="Center"/>
            <!-- Level Theme-->
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="80" Stroke="Black" VerticalAlignment="Top" Width="360" Margin="0,80,0,0"/>
            <TextBlock  FontFamily="Times New Roman" FontSize="18" VerticalAlignment="Center" Margin="25,109,0,207" Height="22"><Run Text="Select level theme:"/></TextBlock>
            <ComboBox  HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="25" Margin="230,107.5,0,0">
                <ComboBoxItem FontFamily="Times New Roman" Content="Plains" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem FontFamily="Times New Roman" Content="Hills"/>
                <ComboBoxItem FontFamily="Times New Roman" Content="Jungle"/>
                <ComboBoxItem FontFamily="Times New Roman" Content="Tundra"/>
            </ComboBox>
            <!-- Timer Settings -->
            <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="80" Stroke="Black" VerticalAlignment="Top" Width="360" Margin="0,160,0,0"/>
            <RadioButton FontFamily="Times New Roman" FontSize="18" Margin="10,192,0,121" HorizontalAlignment="Left" VerticalAlignment="Center" Height="25">Stopwatch Enabled</RadioButton>
            <RadioButton FontFamily="Times New Roman" FontSize="18" Margin="0,192,10,121" HorizontalAlignment="Right" VerticalAlignment="Center" Height="25" Click="RadioButton_Click" >Countdown Timer</RadioButton>
        </Grid>

    </Grid>
</Window>
