<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="S.J" Height="500" Width="750">
    <Grid>
        <MediaElement x:Name="MediaEL" LoadedBehavior="Manual" UnloadedBehavior="Stop" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto"/>
        <Button x:Name="Open_Button" Content="Open" Click ="Open_Button_Click"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" Margin="0,420,0,0" Height="50"/>
        <Button x:Name="Play_Button" Content="Play" Click ="Play_Button_Click" HorizontalAlignment="Left" Margin="186,420,0,0" VerticalAlignment="Top" Width="184" Height="50"/>
        <Button x:Name="Stop_Button" Content="Stop" Click ="Stop_Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" Margin="370,420,0,0" Height="50"/>
        <Button x:Name="Full_Screen_Button" Content="Full_Screen" Click ="Full_Screen_Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="186" Margin="556,420,0,0" Height="50"/>

    </Grid>
</Window>
